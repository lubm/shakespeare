import re

class HTMLFormatter(object):

    @classmethod
    def apply_tag_to_pattern(cls, pattern, tag, text_list):
        formatted_text_list = []
        for text in text_list:
            formatted_text = text
            matches = set(re.findall(pattern, text))
            for match in matches:
                formatted_text = re.sub(match, '<%s>%s</%s>' % (tag, match, tag), formatted_text)
            formatted_text_list.append(formatted_text)
        return formatted_text_list
